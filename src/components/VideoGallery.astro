---
interface Props {
  title?: string;
}
const { title = 'Watch & Learn' } = Astro.props;
---
<div class="video-gallery">
  <div class="video-gallery-header">
    <svg class="video-gallery-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polygon points="5 3 19 12 5 21 5 3" />
    </svg>
    <h3>{title}</h3>
  </div>
  <div class="video-gallery-grid">
    <slot />
  </div>
</div>
