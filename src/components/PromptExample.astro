---
interface Props {
  prompt: string;
  context?: string;
  result?: string;
}
const { prompt, context, result } = Astro.props;
---
<div class="prompt-example">
  <div class="prompt-example-header">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
    What to tell Claude Code
  </div>
  <div class="prompt-example-body">{prompt}</div>
  {context && <div class="prompt-example-context">When: {context}</div>}
  {result && <div class="prompt-example-result">Result: {result}</div>}
</div>
